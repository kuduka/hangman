<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.hangman" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>hangman</name>
    <description>
        A hangman game PhoneGap app.
    </description>
    <author email="support@hangman.com" href="http://hangman.com">
        HangMan Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.1" />
    <plugin name="cordova-plugin-device-motion" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.1.1" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />
    <plugin name="cordova-plugin-shake" source="npm" spec="~0.6.0" />
    <plugin name="cordova-plugin-vibration" source="npm" spec="~2.1.0" />
    <platform name="android" />
    <platform name="browser">
        <preference name="SplashScreen" value="/img/logo.png" />
        <preference name="SplashScreenDelay" value="2000" />
        <preference name="SplashScreenBackgroundColor" value="black" />
        <preference name="ShowSplashScreen" value="true" />
        <preference name="SplashScreenWidth" value="600" />
        <preference name="SplashScreenHeight" value="300" />
    </platform>    
     <icon src="/img/icon.png" />
</widget>
